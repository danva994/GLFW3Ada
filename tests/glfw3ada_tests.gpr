with "../glfw3ada";

project GLFW3Ada_Tests is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Exec_Dir use "exec";
   for Main use ("centered_window.adb", "simple_callbacks.adb", "simple_window.adb", "windowed_fullscreen.adb");

   package Linker is
      for Linker_Options use ("-LC:/devel/glfw-3.1.1/lib", "-lglfw3", "-lopengl32", "-lgdi32");
   end Linker;

   package Compiler is
      for Default_Switches ("ada") use ("-gnatwa", "-gnat05", "-gnatf");
   end Compiler;

end GLFW3Ada_Tests;

